        <!--  LABEL REVERSE STRING  -->
        <Label Grid.Row="15" Content="15. De  string omdraaien" />
        <!--  TEXTBOX REVERSE STRING  -->
        <TextBox
            x:Name="txtReverseString"
            Grid.Row="15"
            Grid.Column="1"
