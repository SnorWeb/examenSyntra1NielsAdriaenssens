<Window
    x:Class="examenSyntra1NielsAdriaenssens.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:examenSyntra1NielsAdriaenssens"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="800"
    mc:Ignorable="d">

    <Grid>
        <!--  SCROLLBAR  -->
        <!--<ScrollBar x:Name="ScrollBarVertical" Orientation="Vertical" />-->
        <!--  GRID DEFFINITIONS  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <!--  TITEL  -->
        <Label
            Padding="5"
            Content="Hoofdstring"
            FontSize="18"
            Foreground="red" />

        <!--  TEXTBOX INPUT  -->
        <TextBox
            x:Name="txtInput"
            Grid.Column="1"
            Margin="5"
            Padding="4"
            VerticalAlignment="Center"
            Text=" visual basic.net is the verry best. " />

        <!--  LABEL UPPERCASE  -->
        <Label Grid.Row="1" Content="1. Alles in hoofdletters zetten" />
        <!--  TEXTBOX UPPERCASE  -->
        <TextBox
            x:Name="txtUpperCase"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON UPPERCASE  -->
        <Button
            x:Name="btnUpperCase"
            Grid.Row="1"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnUpperCase_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL LOWERCASE  -->
        <Label Grid.Row="2" Content="2. Alles in kleine letters zetten" />
        <!--  TEXTBOX LOWERCASE  -->
        <TextBox
            x:Name="txtLowerCase"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON UPPERCASE  -->
        <Button
            x:Name="btnLowerCase"
            Grid.Row="2"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnLowerCase_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL COUNT  -->
        <Label Grid.Row="3" Content="3. Lengte van de string" />
        <!--  TEXTBOX COUNT  -->
        <TextBox
            x:Name="txtCount"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON COUNT  -->
        <Button
            x:Name="btnCount"
            Grid.Row="3"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnCount_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL FIRST LETTER  -->
        <Label Grid.Row="4" Content="4. Eerste letter van de string" />
        <!--  TEXTBOX FIRST LETTER  -->
        <TextBox
            x:Name="txtFirstLetter"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON FIRSTLETTER  -->
        <Button
            x:Name="btnFirstLetter"
            Grid.Row="4"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnFirstLetter_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL FIRST LETTER  -->
        <Label Grid.Row="5" Content="5. Laatste letter van de string" />
        <!--  TEXTBOX FIRST LETTER  -->
        <TextBox
            x:Name="txtLastLetter"
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON LASTLETTER  -->
        <Button
            x:Name="btnlastLetter"
            Grid.Row="5"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnLastLetter_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL 3THROUGH7  -->
        <Label Grid.Row="6" Content="6. De 3de tem de 7de letter" />
        <!--  TEXTBOX 3THROUGH7  -->
