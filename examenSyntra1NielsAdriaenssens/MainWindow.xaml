        <!--  LABEL SELECT SENTENCE  -->
        <Label Grid.Row="13" Content="13. Selecteer de ganse tekst" />
        <!--  TEXTBOX SELECT SENTENCE  -->
        <TextBox
            x:Name="txtSelectSentence"
            Grid.Row="13"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON SELECT SENTENCE  -->
        <Button
            x:Name="btnSelectSentence"
            Grid.Row="13"
            Grid.Column="2"
            Margin="5,5,40,5"
