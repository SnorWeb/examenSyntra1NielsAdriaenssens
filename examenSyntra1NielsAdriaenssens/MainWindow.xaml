            Content="..."
            Cursor="Hand" />

        <!--  LABEL DELETE FRONT SPACE  -->
        <Label Grid.Row="7" Content="7. Spaties voor de string weghalen" />
        <!--  TEXTBOX DELETE FRONT SPACE  -->
        <TextBox
            x:Name="txtDeleteFrontSpace"
            Grid.Row="7"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON DELETE FRONT SPACE  -->
        <Button
            x:Name="btnDeleteFrontSpace"
            Grid.Row="7"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnDeleteFrontSpace_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL DELETE END SPACE  -->
        <Label Grid.Row="8" Content="8. Spaties achter de string weghalen" />
        <!--  TEXTBOX DELETE END SPACE  -->
        <TextBox
            x:Name="txtDeleteEndSpace"
            Grid.Row="8"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON DELETE END SPACE  -->
        <Button
            x:Name="btnDeleteEndSpace"
            Grid.Row="8"
            Grid.Column="2"
            Margin="5,5,40,5"
