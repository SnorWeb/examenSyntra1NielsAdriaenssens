        <!--  TEXTBOX VOWEL UPPERCASE  -->
        <TextBox
            x:Name="txtVowelUppercase"
            Grid.Row="19"
            Grid.Column="1"
            Margin="5"
            Background="Khaki"
            Cursor="Arrow"
            IsReadOnly="True" />
        <!--  BUTTON VOWEL UPPERCASE  -->
        <Button
            x:Name="btnVowelUpperCase"
            Grid.Row="19"
            Grid.Column="2"
            Margin="5,5,40,5"
            Click="btnVowelUpperCfase_Click"
            Content="..."
            Cursor="Hand" />

        <!--  LABEL REVERSE STRING 2  -->
        <Label Grid.Row="20" Content="19. String omdraaien met code" />
        <!--  TEXTBOX REVERSE STRING 2  -->
