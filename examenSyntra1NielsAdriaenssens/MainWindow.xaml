            Cursor="Hand" />

        <!--  LABEL DELETE SPACES  -->
        <Label Grid.Row="9" Content="9. Spaties voor en achter de string weghalen" />
        <!--  TEXTBOX DELETE SPACES  -->
        <TextBox
            x:Name="txtDeleteSpaces"
