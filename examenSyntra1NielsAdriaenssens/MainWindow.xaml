        <!--  LABEL FIRST UPPERCASE  -->
        <Label Grid.Row="17" Content="16. De eerste letter is een hoofdletter en de rest klein" />
        <!--  TEXTBOX FIRST UPPERCASE  -->
        <TextBox
            x:Name="txtFirstUpperCase"
